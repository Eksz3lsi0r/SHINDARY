{
	"version": "2.0.0",
	"tasks": [
		{
			"command": "npm run build",
			"label": "Build Project",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"type": "shell"
		},
		{
			"label": "Rojo: Start Server",
			"type": "shell",
			"command": "rojo",
			"args": [
				"serve",
				"--port",
				"34872"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Rojo server listening.*$",
					"endsPattern": "^.*Rojo server stopped.*$"
				}
			}
		},
		{
			"label": "Rojo: Generate Sourcemap",
			"type": "shell",
			"command": "rojo",
			"args": [
				"sourcemap",
				"default.project.json",
				"--output",
				"sourcemap.json"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Rojo: Start Server with Sourcemap",
			"type": "shell",
			"command": "rojo",
			"args": [
				"serve",
				"default.project.json",
				"--port",
				"34872"
			],
			"dependsOn": "Rojo: Generate Sourcemap",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [],
			"isBackground": true
		},
		{
			"label": "Rojo: Build",
			"type": "shell",
			"command": "rojo",
			"args": [
				"build",
				"default.project.json",
				"--output",
				"build/game.rbxlx"
			],
			"dependsOn": "Rojo: Generate Sourcemap",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "StyLua: Format All",
			"type": "shell",
			"command": "stylua",
			"args": [
				"src/"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}
