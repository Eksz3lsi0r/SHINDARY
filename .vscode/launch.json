{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üéÆ Rojo: Start Live Sync Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/rojo",
            "args": [
                "serve",
                "--port",
                "34872"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ROJO_PROJECT_FILE": "default.project.json",
                "LUAU_TYPE_CHECKING": "strict"
            },
            "presentation": {
                "group": "rojo",
                "order": 1
            }
        },
        {
            "name": "üîß Rojo: Build Project for Studio",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/rojo",
            "args": [
                "build",
                "--output",
                "build/SubwaySurfers.rbxlx"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ROJO_PROJECT_FILE": "default.project.json"
            },
            "presentation": {
                "group": "rojo",
                "order": 2
            }
        },
        {
            "name": "üì§ Rojo: Upload to Roblox",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/rojo",
            "args": [
                "upload",
                "--asset-id",
                "${input:placeId}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ROBLOSECURITY": "${env:ROBLOSECURITY}"
            },
            "presentation": {
                "group": "rojo",
                "order": 3
            }
        },
        {
            "name": "üßπ StyLua: Format All Lua Files",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/stylua",
            "args": [
                "src/",
                "--config-path",
                "stylua.toml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "presentation": {
                "group": "tools",
                "order": 1
            }
        },
        {
            "name": "üîç Luau: Type Check Project",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/luau-lsp",
            "args": [
                "analyze",
                "src/"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "LUAU_ANALYZE_MODE": "strict"
            },
            "presentation": {
                "group": "tools",
                "order": 2
            }
        },
        {
            "name": "üìã Open Roblox Studio with Place",
            "type": "node",
            "request": "launch",
            "program": "cmd",
            "args": [
                "/c",
                "start",
                "roblox-studio://placeId=${input:placeId}"
            ],
            "console": "integratedTerminal",
            "windows": {
                "program": "cmd",
                "args": [
                    "/c",
                    "start",
                    "roblox-studio://placeId=${input:placeId}"
                ]
            },
            "osx": {
                "program": "open",
                "args": [
                    "roblox-studio://placeId=${input:placeId}"
                ]
            },
            "linux": {
                "program": "xdg-open",
                "args": [
                    "roblox-studio://placeId=${input:placeId}"
                ]
            },
            "presentation": {
                "group": "studio",
                "order": 1
            }
        }
    ],
    "compounds": [
        {
            "name": "üöÄ Full Development Setup",
            "configurations": [
                "üéÆ Rojo: Start Live Sync Server"
            ],
            "preLaunchTask": "setup-roblox-dev-environment",
            "presentation": {
                "group": "compounds",
                "order": 1
            }
        },
        {
            "name": "üèóÔ∏è Build and Format Project",
            "configurations": [
                "üßπ StyLua: Format All Lua Files",
                "üîß Rojo: Build Project for Studio"
            ],
            "presentation": {
                "group": "compounds",
                "order": 2
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "placeId",
            "description": "Enter your Roblox Place ID for upload/opening"
        },
        {
            "type": "pickString",
            "id": "debugTarget",
            "description": "Select debugging target",
            "options": [
                {
                    "label": "Server Services (ServiceInitializer)",
                    "value": "src/server/ServiceInitializer.server.lua"
                },
                {
                    "label": "Player Controller (Client)",
                    "value": "src/client/controllers/EnhancedPlayerController.client.lua"
                },
                {
                    "label": "World Generation (Server)",
                    "value": "src/server/DynamicWorldGenerator.lua"
                },
                {
                    "label": "Game Config (Shared)",
                    "value": "src/shared/GameConfig.lua"
                }
            ]
        }
    ]
}
