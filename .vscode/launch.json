{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Serve Roblox Project",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "serve"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Serve Roblox Project (Dev)",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "serve:dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build Roblox Project",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "lua-local",
            "request": "attach",
            "name": "Attach to Roblox Studio",
            "host": "127.0.0.1",
            "port": 8172,
            "stopOnEntry": false,
            "sourceRoot": "${workspaceFolder}",
            "destRoot": ""
        },
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug",
            "program": {
                "lua": "lua5.1",
                "file": "${workspaceFolder}/main.lua"
            },
            "cwd": "${workspaceFolder}",
            "interpreter": "lua5.1",
            "sourceRoot": "${workspaceFolder}"
        },
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug Custom Lua Executable",
            "program": {
                "command": "lua5.1"
            },
            "args": [
                "${workspaceFolder}/main.lua"
            ],
            "cwd": "${workspaceFolder}",
            "sourceRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Rojo + Debugger",
            "configurations": [
                "Serve Roblox Project",
                "Attach to Roblox Studio"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Roblox Development",
                "order": 1
            }
        }
    ]
}