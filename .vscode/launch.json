    "version": "0.2.0",
    "configurations": [
        {
            "type": "luau",
            "request": "attach",
            "name": "attach to luau debugger",
            "address": "localhost",
            "port": 58000
        },
        {
            "type": "luau",
            "request": "launch",
            "name": "launch luau debugger",
            "program": "${workspaceFolder}/main.lua",
            "port": 58000
        },
        {
            "type": "lua",
            "name": "Launch Lua",
            "request": "launch",
            "program": "${workspaceFolder}/src/server/main.server.lua",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "args": [],
            "env": {},
            "console": "integratedTerminal"
        },
        {
            "type": "luau",
            "request": "launch",
            "name": "launch luau debugger with args",
            "program": "${workspaceFolder}/main.lua",
            "port": 58000,
            "args": [
                "--debug",
                "--verbose"
            ],
            "env": {
                "ENV_VAR": "value"
            }
        }
    ]
