{
  "name": "roblox-copilot-enhanced",
  "displayName": "Roblox Lua Copilot Enhanced",
  "description": "Enhanced GitHub Copilot integration for Roblox Lua/Luau development with Rojo sync",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "AI",
    "Formatters"
  ],
  "main": "./extensions/vscodeAPI.js",
  "contributes": {
    "languages": [
      {
        "id": "luau",
        "aliases": ["Luau", "luau"],
        "extensions": [".lua", ".luau", ".server.lua", ".client.lua", ".module.lua"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "roblox.semanticSearch",
        "title": "Semantic Search",
        "category": "Roblox"
      },
      {
        "command": "roblox.workspaceSearch",
        "title": "Workspace Search",
        "category": "Roblox"
      },
      {
        "command": "roblox.findCodeUsages",
        "title": "Find Code Usages",
        "category": "Roblox"
      },
      {
        "command": "roblox.enhanceCodebase",
        "title": "Enhance Codebase for Copilot",
        "category": "Roblox"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Roblox Copilot Enhanced",
      "properties": {
        "robloxCopilot.enableEnhancedContext": {
          "type": "boolean",
          "default": true,
          "description": "Enable enhanced context for better Copilot suggestions"
        },
        "robloxCopilot.rojoSyncIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Rojo sync integration"
        },
        "robloxCopilot.luauTypeInference": {
          "type": "boolean",
          "default": true,
          "description": "Enable Luau type inference"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.x",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vscode-languageserver-node": "^9.0.1"
  },
  "activationEvents": [
    "onLanguage:luau",
    "onLanguage:lua",
    "workspaceContains:**/default.project.json",
    "workspaceContains:**/*.server.lua",
    "workspaceContains:**/*.client.lua"
  ]
}
